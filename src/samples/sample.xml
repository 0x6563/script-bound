<layouts>
    <layout id="main">
        <container flow="top-bottom">
            <container settings={"flow":"left-right"} bind="$.personal">
                <html bind="@path" />
                <html>Template Defined <b style="color:red;">HTML</b></html>
                <html bind="$root.html" />
            </container>
            <container settings={"flow":"left-right"} bind="$.personal">
                <input type="text" bind="$.firstName" label="First Name" />
                <input if=($ == "Jane") type="text" bind="$.firstName" label="First Name" />
                <input type="text" bind="$.lastName" label="Last Name" />
            </container>
            <html>
                Phone numbers 
            </html>
            <list type="tabs" side="left" bind="$.contact">
                <container>
                    <html bind="@path" />
                    <input type="text" bind="$.type" />
                    <input type="text" bind="$.phoneNumber" />
                </container>
            </list>
            <html>
                Phone numbers but filtered for mobile only
            </html>
            <list type="tabs" settings={"side":"top"} bind="$.contact">
                <container if="isHome">
                    <html bind="@path" />
                    <input type="text" bind="$.type" />
                    <input type="text" bind="$.phoneNumber" />
                </container>
            </list>
        </container>
    </layout>
</layouts>
<scripts>
    <script id="isHome"> $.type == "mobile" </script>
</scripts>
<style>
    input {
        color: red;
        border: none;
        border-bottom: 2px solid black;
        font-size: 14px;

    }
    input + *{
        position: relative;
        transition: all 200ms;
        font-size: 14px;
        top: 2px;
        left: 0px;
        height: 12px;
        pointer-events:none;
    }
    input:not(:focus):placeholder-shown + * {
        font-size: 14px;
        top: -24px;
        left: 6px;
    }

    input:focus {
        outline: none;
        border-bottom: 2px solid blue;
    }

    [data-control] {
        border: solid 1px #bbb;
        padding: 8px !important;
    }
</style>